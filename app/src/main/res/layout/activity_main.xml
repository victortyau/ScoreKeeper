<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="@color/light_gray"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="208dp"
        android:layout_height="571dp">

        <TextView
            android:id="@+id/home_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/home_label"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="176dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/start_value"
            android:textSize="36sp" />

        <Button
            android:id="@+id/home_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="289dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/goal" />

        <TextView
            android:id="@+id/home_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="148dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/start_value"
            android:textSize="36sp" />

        <Button
            android:id="@+id/home_assists_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="65dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/assists" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="203dp"
        android:layout_height="571dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="54dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/visitor_label"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/visitor_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="176dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/start_value"
            android:textSize="36sp" />

        <Button
            android:id="@+id/visitor_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="286dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/goal" />

        <TextView
            android:id="@+id/visistor_assists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="149dp"
            android:fontFamily="@font/permanent_marker"
            android:text="@string/start_value"
            android:textSize="36sp" />

        <Button
            android:id="@+id/visistor_assists_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="65dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/assists" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="572dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/reset_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="157dp"
            android:layout_marginBottom="87dp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="@string/reset" />
    </RelativeLayout>
</RelativeLayout>